{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-std=c++20",
                // "`pkg-config","--cflags" ,"--libs", "gtest`",
                // "`pkg-config","--cflags","--libs" ,"folly`",
                // "`pkg-config","--cflags","--libs" ,"gflags`",
                // "`pkg-config","--cflags","--libs" ,"glog`",


                "-I","/usr/local/include",
                "-I","/usr/include/libiberty",
                
                "-I","/usr/local/include/fmt/include",
                "-I","/usr/local/include/googletest/include",
                "-L","/usr/local/include/googletest/lib",
                "-L","/usr/local/lib",
                "-lpthread",
                "-lgflags",
                "-lglog",
                "-lgtest",
                "-lfolly",
                "-lfmt",

                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",

                "/usr/local/lib/libfollybenchmark.a",
                "/usr/local/lib/libfolly_test_util.a",
                "/usr/local/lib/libfolly.a",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}